    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^6.14.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
